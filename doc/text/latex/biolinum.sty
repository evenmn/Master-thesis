  \def\lib@fxb{LinBiolinum_R}
  \def\lib@fxk{LinBiolinum_K}

  \providecommand*\DeclareTextGlyphY[3]{%
      % \DeclareTextGlyphY{fxl}{s_t}{64262}
      % #1=basefont #2=glyphname, #3=position
